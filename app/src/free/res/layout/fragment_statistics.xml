<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gianlucadp.coinstracker.StatisticsFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_no_statistic"
        android:padding="10dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_marginTop="60dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_no_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_no_statistic"
        android:layout_centerHorizontal="true"
        android:text="Not enough data to generate graph"
        android:visibility="invisible" />
    <com.jjoe64.graphview.GraphView
    android:layout_width="match_parent"
    android:layout_height="200dip"
    android:id="@+id/graph"
        android:layout_margin="10dp"
        android:visibility="invisible"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:id="@+id/table"
        android:layout_below="@+id/graph">
        <TableRow>
            <TextView
                android:text=""
                android:gravity="center"
                android:padding="3dp" />
            <TextView
            android:text="Incomes"
            android:gravity="center"
            android:padding="3dp" />
            <TextView
                android:text="Expenses"
                android:gravity="center"
                android:padding="3dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Min"
                android:gravity="center"

                android:padding="3dp" />
            <TextView
                android:id="@+id/tv_min_income"
                android:text=""
                android:gravity="center"
                android:padding="3dp" />
            <TextView
                android:id="@+id/tv_min_expense"
                android:text=""
                android:gravity="center"
                android:padding="3dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Max"
                android:gravity="center"
                android:padding="3dp" />
            <TextView
                android:id="@+id/tv_max_income"
                android:text=""
                android:gravity="center"
                android:padding="3dp" />
            <TextView
                android:id="@+id/tv_max_expense"
                android:text=""
                android:gravity="center"
                android:padding="3dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Mean"
                android:gravity="center"
                android:padding="3dip" />
            <TextView
                android:id="@+id/tv_mean_income"
                android:text=""
                android:gravity="center"
                android:padding="3dp" />
            <TextView
                android:id="@+id/tv_mean_expense"
                android:text=""
                android:gravity="center"
                android:padding="3dp" />
        </TableRow>
    </TableLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
