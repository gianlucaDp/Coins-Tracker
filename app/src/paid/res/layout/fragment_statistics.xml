<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gianlucadp.coinstracker.StatisticsFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/im_no_statistic"
        android:padding="10dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/no_statistics_available"
        android:visibility="invisible"/>
    <ProgressBar
        android:id="@+id/pb_loading"
        android:layout_marginTop="60dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_no_statistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_no_statistic"
        android:layout_centerHorizontal="true"
        android:text="@string/not_enough_data_to_generate_graph"
        android:visibility="invisible" />
    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph"
        android:layout_margin="10dp"
        android:visibility="invisible"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:id="@+id/table"
        android:layout_below="@+id/graph">
        <TableRow>
            <TextView
                android:text=""
                android:gravity="center"
                android:padding="3dp" />
            <TextView
                android:text="@string/incomes"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>
            <TextView
                android:text="@string/expenses"
                android:gravity="center"
                android:padding="3dp"
                android:textColor="@color/red"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/min"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="3dp" />
            <TextView
                android:id="@+id/tv_min_income"
                android:text=""
                android:gravity="center"
                android:padding="3dp" />
            <TextView
                android:id="@+id/tv_min_expense"
                android:text=""
                android:gravity="center"
                android:padding="3dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/max"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="3dp" />
            <TextView
                android:id="@+id/tv_max_income"
                android:text=""
                android:gravity="center"
                android:padding="3dp" />
            <TextView
                android:id="@+id/tv_max_expense"
                android:text=""
                android:gravity="center"
                android:padding="3dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/mean"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="3dip" />
            <TextView
                android:id="@+id/tv_mean_income"
                android:text=""
                android:gravity="center"
                android:padding="3dp" />
            <TextView
                android:id="@+id/tv_mean_expense"
                android:text=""
                android:gravity="center"
                android:padding="3dp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
